{
  "name": "damian-rogulski-code-sample",
  "version": "1.0.0",
  "description": "The project shows a small ecommerce solution using Next.JS",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "check-types": "tsc",
    "clear-cache": "rimraf .next",
    "dev": "run-s clear-cache start:dev",
    "format": "prettier \"**/*.+(ts|tsx|js|jsx|json)\" --write ",
    "check-format": "prettier \"**/*.+(ts|tsx|js|jsx|json)\" --check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "precommit-hook": "lint-staged",
    "start": "next start",
    "start:dev": "next dev",
    "stylelint": "stylelint \"**/*.{css,scss}\" --fix",
    "check-stylelint": "stylelint \"**/*.{css,scss}\"",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --passWithNoTests",
    "validate": "run-p check-types check-format check-lint check-stylelint test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "^12.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint-config-standard-scss": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@commitlint/cli": "^16.2.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.6.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-stylelint": "^15.0.0",
    "eslint-import-resolver-custom-alias": "^1.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^7.4.1",
    "prettier": "^2.4.1",
    "sass": "^1.49.8",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.5.1",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  }
}
